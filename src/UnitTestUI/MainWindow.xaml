<Window
    x:Class="UnitTestUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UnitTestUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <Button
                Height="35"
                Margin="3"
                Click="ButtonBase_OnClick"
                Content="拟合圆" />
            <Button
                Height="35"
                Margin="3"
                Click="StatisticalFilter_OnClick"
                Content="统计滤波" />
            <Button
                Height="35"
                Margin="3"
                Click="SmoothFilter_OnClick"
                Content="平滑滤波" />
        </StackPanel>
    </Grid>
</Window>
